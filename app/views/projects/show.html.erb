<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @project.created_at.strftime('%A, %B %d') %></p>
    <h1><%= @project.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @project.description %>
    <div class="button_wrapper">
      <a href="<%= @project.link %>" target="_blank">Visit <%= @project.title %></a>
    </div>
  </div>

  <% if user_signed_in? && current_user.is_admin? %>
    <div id='admin_links'>
      <%= link_to 'Edit', edit_project_path %>
      <%= link_to "Delete", project_path(@project), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure to delete this post?"
      } %>
    </div>
  <% end %>
<!--  có thể sử dụng <%#= link_to "Edit", edit_project_path(@project) %>-->
  <hr>
</div>
