  <!DOCTYPE html>
<html lang="vi">
<head>
  <title>Loi Nguyen</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>
<header id="main_navigation" class="clearfix">
  <%= link_to "Loi Nguyen", root_path, class: "name" %>
  <nav>
    <%= link_to "Articles", posts_path %>
    <%= link_to "Projects", projects_path %>
    <%= link_to "Contact", new_contact_path %>
    <% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
      <%#= button_to("Log Out", destroy_user_session_path, method: :delete ) %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path %>
    <% end %>
  </nav>
</header>

<% if notice %>
  <p class="notice"><%= notice %></p>
<% elsif alert %>
  <p class="alert"><%= alert %></p>
<% end %>

  <%= yield %>

<footer id="main_footer">
  <p class="copyright">&copy;2023 Loi Nguyen</p>
  <nav>
    <a href="https://github.com/rubyhcm" target=_blank><i class="fa-brands fa-twitter" aria-hidden="true"></i></a>
<!--    target=_blank to open new page-->
    <a href="https://github.com/rubyhcm"><i class="fa-brands fa-youtube" aria-hidden="true"></i></a>
    <a href="https://github.com/rubyhcm"><i class="fa-brands fa-facebook" aria-hidden="true"></i></a>
    <a href="https://github.com/rubyhcm"><i class="fa-brands fa-github" aria-hidden="true"></i></a>
  </nav>
</footer>
</body>
</html>
